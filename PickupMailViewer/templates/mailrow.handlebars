<tr class="message-row{{#is MessageType "Mail"}} clickable-row{{/is}}" data-mail-id="{{MessageId}}">
    <td>
        {{#is MessageType "Mail"}}
        <span class="glyphicon glyphicon-envelope"></span>
        {{/is}}
        {{#is MessageType "Sms"}}
        <span class="glyphicon glyphicon-phone"></span>
        {{/is}}
        {{#if AttachmentNames}}
        <span class="glyphicon glyphicon-paperclip" />
        {{/if}}
    </td>
    <td>
        {{SentOnFormatted}}
    </td>
    <td>
        {{ToAddress}}
    </td>
    <td>
        {{Subject}}
    </td>
</tr>