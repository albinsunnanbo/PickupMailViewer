@{
    ViewBag.Title = "Mail Viewer";
}

<div class="jumbotron">
    <h1>Mail viewer</h1>
    <form id="search-form">
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group input-group-lg">
                    <input id="search-text" type="text" class="form-control input-lg" placeholder="Search messages...">
                    <span class="input-group-btn">
                        <button id="search-btn" class="btn" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
    </form>
</div>
<div class="row">
    <div class="col-md-12">
        @Html.Partial("FileList")
    </div>
</div>
@section scripts{
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
}